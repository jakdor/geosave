<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/pref_account_title">

        <Preference android:title="@string/pref_sign_in_login_title"
            android:key="@string/pref_sign_in_login_key"
            android:summary="@string/pref_sign_in_login_desc"
            android:persistent="false"/>

        <Preference android:title="@string/pref_logout_title"
            android:key="@string/pref_logout_key"
            android:persistent="false"/>

        <Preference android:title="@string/pref_delete_account_title"
            android:key="@string/pref_delete_account_key"
            android:summary="@string/pref_delete_account_desc"
            android:persistent="false"/>

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/pref_units_title">

        <ListPreference android:title="@string/pref_location_units_title"
            android:key="@string/pref_location_units_key"
            android:entries="@array/pref_location_units_entries"
            android:entryValues="@array/pref_location_units_values"
            android:defaultValue="0"
            android:persistent="true"/>

        <ListPreference android:title="@string/pref_alt_acc_units_title"
            android:key="@string/pref_alt_acc_units_key"
            android:entries="@array/pref_alt_acc_units_entries"
            android:entryValues="@array/pref_alt_acc_units_values"
            android:defaultValue="0"
            android:persistent="true"/>

        <ListPreference android:title="@string/pref_speed_units_title"
            android:key="@string/pref_speed_units_key"
            android:entries="@array/pref_speed_units_entries"
            android:entryValues="@array/pref_speed_units_values"
            android:defaultValue="0"
            android:persistent="true"/>

    </PreferenceCategory>

</PreferenceScreen>
